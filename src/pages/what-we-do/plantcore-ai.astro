---
import PageLayout from "../../layouts/PageLayout.astro";
import GoogleForm from "../../components/forms/GoogleForm";
import { FORMS } from "../../config/forms";
import { Image } from 'astro:assets';

// Import Plantcore components
import HeroSection from "../../components/plantcore/HeroSection";
import MissionSection from "../../components/plantcore/MissionSection";
import MethodCards from "../../components/plantcore/MethodCards";
import DataFlowDiagram from "../../components/plantcore/DataFlowDiagram";
import ROIMetrics from "../../components/plantcore/ROIMetrics";
import SideNavigation from "../../components/plantcore/SideNavigation";

// 导入工厂图片
import factoryImage from "../../assets/plantcore-ai/factory.png";
---

<PageLayout title="Plantcore.AI - Sinthome">
  <div class="relative bg-black min-h-screen">
    <!-- Side Navigation -->
    <SideNavigation client:load />

    <!-- Hero Section -->
    <HeroSection
      client:load
      onRequestDemo={() => {
        const element = document.getElementById('contact');
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' });
        }
      }}
      onJoinPilot={() => {
        const element = document.getElementById('contact');
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' });
        }
      }}
    />

    <!-- Mission Section -->
    <MissionSection client:load />

    <!-- Method Section -->
    <section id="method" class="py-20 bg-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Method — Starting from Decisions
          </h2>
          <p class="text-xl text-zinc-300 max-w-4xl mx-auto leading-relaxed mb-8">
            Current ERP systems record transactions and processes but fail to capture the on-the-ground choices made by workers and managers in real time. Plantcore.AI addresses this gap by deploying AI Agents directly on the factory floor.
          </p>

          <!-- Factory Image -->
          <div class="flex justify-center my-12">
            <div class="relative overflow-hidden rounded-2xl max-w-4xl w-full shadow-2xl">
              <Image
                src={factoryImage}
                alt="Factory floor showing industrial AI implementation"
                width={1200}
                height={700}
                loading="lazy"
                format="webp"
                quality={90}
                class="w-full h-auto object-cover"
              />
              <div class="absolute bottom-6 left-6 bg-zinc-900/90 backdrop-blur-sm px-4 py-2 rounded-full border border-zinc-700">
                <span class="text-sm font-semibold text-white">凡事都有开端 - Everything Has a Beginning</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Interactive Method Cards -->
        <MethodCards client:load />

        <div class="mt-12 text-center">
          <p class="text-zinc-300 leading-relaxed max-w-4xl mx-auto">
            This approach not only transforms day-to-day industrial operations but also lays the foundation for the long-term accumulation, transfer, and sharing of industrial knowledge.
          </p>
        </div>
      </div>
    </section>

    <!-- Data Flow Architecture -->
    <section id="data-flow" class="py-20 bg-zinc-950/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Three-Layer Architecture
          </h2>
          <p class="text-xl text-zinc-300 max-w-3xl mx-auto leading-relaxed">
            Our comprehensive system transforms raw factory decisions into intelligent guidance
          </p>
        </div>

        <DataFlowDiagram client:load />
      </div>
    </section>

    <!-- ROI Metrics -->
    <section id="roi" class="py-20 bg-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ROIMetrics client:load />
      </div>
    </section>

    <!-- Vision Section -->
    <section id="vision" class="py-20 bg-zinc-950/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
            Our Vision for 2030
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <div class="bg-gradient-to-r from-blue-600/10 via-transparent to-blue-600/10 border border-blue-600/20 rounded-xl p-8">
              <div class="text-4xl font-bold text-blue-400 mb-4">10,000</div>
              <div class="text-lg font-semibold text-white mb-2">Factories Connected</div>
              <p class="text-zinc-300 text-sm">Building a global network of intelligent manufacturing facilities</p>
            </div>

            <div class="bg-gradient-to-r from-green-600/10 via-transparent to-green-600/10 border border-green-600/20 rounded-xl p-8">
              <div class="text-4xl font-bold text-green-400 mb-4">150K+</div>
              <div class="text-lg font-semibold text-white mb-2">AI Agents Deployed</div>
              <p class="text-zinc-300 text-sm">Comprehensive decision capture across all industrial processes</p>
            </div>
          </div>

          <p class="text-xl text-zinc-300 leading-relaxed mb-8">
            On this foundation, we will train and deploy the world's first Industrial Vertical LLM—an engine of decision-making grounded in authentic factory data. This LLM will serve as the operating system of Industry 4.0, guiding real-time production choices and reshaping how humans and machines collaborate.
          </p>
        </div>
      </div>
    </section>

    <!-- Philosophy Section -->
    <section class="py-20 bg-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="bg-gradient-to-r from-red-600/10 via-transparent to-red-600/10 border border-red-600/20 rounded-2xl p-12">
            <h2 class="text-3xl font-bold text-white mb-6">Our Philosophy</h2>
            <p class="text-xl text-zinc-300 leading-relaxed">
              At Plantcore.AI, we believe the true industrial revolution is not the replacement of workers by machines, but the creation of an intelligent decision network—powered by an Industrial LLM—that redefines the relationship between humans and production, opening new possibilities for the industries and societies of the future.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-zinc-950/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Partner with Plantcore.AI
          </h2>
          <p class="text-xl text-zinc-300 leading-relaxed mb-8">
            Ready to implement AI-driven decision intelligence in your manufacturing operations? Join our pilot program and be part of the industrial revolution.
          </p>

          <!-- Multiple CTA Options -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a href="#contact-form" class="inline-flex items-center px-8 py-4 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition-all duration-300 transform hover:scale-105">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-4.126-.98L3 20l1.02-5.874A8.955 8.955 0 013 12a8 8 0 018-8c4.418 0 8 3.582 8 8z"></path>
              </svg>
              Request Demo
            </a>
            <a href="#contact-form" class="inline-flex items-center px-8 py-4 border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-black transition-all duration-300 transform hover:scale-105">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
              </svg>
              Join Pilot Program
            </a>
          </div>
        </div>

        <div id="contact-form" class="bg-zinc-900/50 border border-zinc-800 rounded-2xl p-8">
          <GoogleForm
            formId={FORMS.projects.plantcoreAI.id}
            title={FORMS.projects.plantcoreAI.title}
            height={FORMS.projects.plantcoreAI.height}
            client:visible
          />
        </div>
      </div>
    </section>
  </div>
</PageLayout>
