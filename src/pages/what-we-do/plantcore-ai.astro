---
import PageLayout from "../../layouts/PageLayout.astro";
import GoogleForm from "../../components/forms/GoogleForm";
import { FORMS } from "../../config/forms";
import { Image } from 'astro:assets';

// Import Plantcore components
import HeroSection from "../../components/plantcore/HeroSection";
import MissionSection from "../../components/plantcore/MissionSection";
import MethodCards from "../../components/plantcore/MethodCards";
import DataFlowDiagram from "../../components/plantcore/DataFlowDiagram";
import ROIMetrics from "../../components/plantcore/ROIMetrics";
import SideNavigation from "../../components/plantcore/SideNavigation";
import IndustrialWarpBackground from "../../components/plantcore/IndustrialWarpBackground";
import ProjectContext from "../../components/plantcore/ProjectContext";

// 导入工厂图片
import factoryImage from "../../assets/plantcore-ai/factory.png";
---

<PageLayout title="Plantcore.AI - Sinthome">
  <div class="relative bg-black min-h-screen">
    <!-- Industrial Warp Background -->
    <IndustrialWarpBackground client:load />

    <!-- Side Navigation -->
    <SideNavigation client:load />

    <!-- Hero Section -->
    <HeroSection
      client:load
      onRequestDemo={() => {
        const element = document.getElementById('contact');
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' });
        }
      }}
      onJoinPilot={() => {
        const element = document.getElementById('contact');
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' });
        }
      }}
    />

    <!-- Mission Section -->
    <MissionSection client:load />

    <!-- Method Section -->
    <section id="method" class="relative py-20 bg-black/90 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Industrial Section Header */}
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-4 mb-8">
            <div class="w-12 h-px bg-red-500"></div>
            <h2 class="text-3xl md:text-4xl font-black text-white tracking-wide uppercase">
              THREE-LAYER ARCHITECTURE
            </h2>
            <div class="w-12 h-px bg-red-500"></div>
          </div>

          <div class="max-w-4xl mx-auto mb-12">
            <div class="border-l-4 border-red-500 pl-6 text-left inline-block">
              <p class="text-lg text-zinc-300 leading-relaxed font-medium mb-4">
                AI Agents generate direct value and cover decision points where ERP cannot reach.
                These agents deliver immediate ROI (≥10% procurement savings, ~7% inventory shrinkage reduction)
                while simultaneously creating a sustainable stream of decision assets.
              </p>
              <div class="text-sm text-red-400 font-mono">
                // Building a three-layer architecture: AI Agents → CDO Data Platform → Industrial Vertical LLM
              </div>
            </div>
          </div>

          {/* Industrial Factory Display */}
          <div class="relative my-16">
            <div class="relative overflow-hidden max-w-5xl mx-auto border-2 border-zinc-800"
                 style="clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px)">
              <Image
                src={factoryImage}
                alt="Factory floor showing industrial AI implementation"
                width={1200}
                height={700}
                loading="lazy"
                format="webp"
                quality={90}
                class="w-full h-auto object-cover opacity-80"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/20"></div>
              <div class="absolute bottom-6 left-6 bg-black/80 border border-red-500/60 px-6 py-3"
                   style="clip-path: polygon(0 0, calc(100% - 12px) 0, 100% 12px, 100% 100%, 12px 100%, 0 calc(100% - 12px))">
                <span class="text-sm font-bold text-red-400 tracking-wide">凡事都有开端</span>
                <div class="text-xs text-zinc-400 font-mono">EVERYTHING HAS A BEGINNING</div>
              </div>
            </div>
          </div>
        </div>

        {/* Industrial Method Cards */}
        <MethodCards client:load />

        {/* Summary Section */}
        <div class="mt-16 text-center">
          <div class="max-w-4xl mx-auto bg-zinc-900/40 border border-zinc-800 p-8">
            <p class="text-lg text-zinc-300 leading-relaxed font-mono">
              // This systematic approach creates a foundation for industrial knowledge accumulation,
              transfer, and amplification across global manufacturing networks.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Data Flow Architecture -->
    <section id="data-flow" class="relative py-20 bg-zinc-950/80 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-4 mb-8">
            <div class="w-12 h-px bg-red-500"></div>
            <h2 class="text-3xl md:text-4xl font-black text-white tracking-wide uppercase">
              THREE-LAYER PIPELINE ARCHITECTURE
            </h2>
            <div class="w-12 h-px bg-red-500"></div>
          </div>
          <p class="text-lg text-zinc-400 font-mono max-w-4xl mx-auto leading-relaxed">
            // SYSTEMATIC TRANSFORMATION: RAW DECISIONS → STRUCTURED INTELLIGENCE → PREDICTIVE GUIDANCE
          </p>
        </div>

        <DataFlowDiagram client:load />
      </div>
    </section>

    <!-- ROI Metrics -->
    <section id="roi" class="relative py-20 bg-black/90 z-10">
      <ROIMetrics client:load />
    </section>

    <!-- Vision Section -->
    <section id="vision" class="relative py-20 bg-zinc-950/80 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto text-center">
          <div class="inline-flex items-center gap-4 mb-12">
            <div class="w-12 h-px bg-red-500"></div>
            <h2 class="text-3xl md:text-4xl font-black text-white tracking-wide uppercase">
              OUR VISION: 2030 ROADMAP
            </h2>
            <div class="w-12 h-px bg-red-500"></div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
            <div class="bg-black border-2 border-blue-600/40 p-8"
                 style="clip-path: polygon(0 0, calc(100% - 16px) 0, 100% 16px, 100% 100%, 16px 100%, 0 calc(100% - 16px))">
              <div class="text-5xl font-black text-blue-400 mb-4 font-mono">10,000</div>
              <div class="text-lg font-bold text-white mb-3 tracking-wide">FACTORIES CONNECTED</div>
              <p class="text-zinc-400 text-sm font-mono leading-relaxed">
                GLOBAL MANUFACTURING NETWORK WITH COMPREHENSIVE DECISION INTELLIGENCE COVERAGE
              </p>
            </div>

            <div class="bg-black border-2 border-green-600/40 p-8"
                 style="clip-path: polygon(0 0, calc(100% - 16px) 0, 100% 16px, 100% 100%, 16px 100%, 0 calc(100% - 16px))">
              <div class="text-5xl font-black text-green-400 mb-4 font-mono">150K+</div>
              <div class="text-lg font-bold text-white mb-3 tracking-wide">AI AGENTS DESIGNED</div>
              <p class="text-zinc-400 text-sm font-mono leading-relaxed">
                COMPREHENSIVE DECISION CAPTURE POINTS ACROSS ALL INDUSTRIAL PROCESSES
              </p>
            </div>
          </div>

          <div class="max-w-5xl mx-auto bg-zinc-900/60 border border-zinc-800 p-12">
            <p class="text-xl text-zinc-300 leading-relaxed font-mono mb-8">
              // Our vision is to build, within the next five years, a decision-data-driven industrial intelligence network
              through continuous agent deployment and CDO data collection.
            </p>
            <p class="text-lg text-zinc-400 leading-relaxed mb-6">
              By 2030, Plantcore.AI will reach 10,000 factories and 150,000 AI Agents, generating hundreds of millions of validated decision samples.
            </p>
            <p class="text-lg text-zinc-400 leading-relaxed">
              On this foundation, we will train and deploy the world's first Industrial Vertical LLM—an engine of decision-making
              grounded in authentic factory data. This LLM will serve as the operating system of Industry 4.0, guiding real-time
              production choices, amplifying collective industrial knowledge, and reshaping how humans and machines collaborate in production.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Philosophy Section -->
    <section class="relative py-20 bg-black/90 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto text-center">
          <div class="bg-zinc-900/60 border-2 border-red-600/30 p-16"
               style="clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px)">
            <div class="inline-flex items-center gap-4 mb-8">
              <div class="w-8 h-px bg-red-500"></div>
              <h2 class="text-3xl font-black text-white tracking-wide uppercase">CORE BELIEF</h2>
              <div class="w-8 h-px bg-red-500"></div>
            </div>
            <div class="max-w-4xl mx-auto">
              <p class="text-xl text-zinc-300 leading-relaxed font-mono mb-6">
                // THE TRUE INDUSTRIAL REVOLUTION
              </p>
              <p class="text-lg text-zinc-400 leading-relaxed">
                At Plantcore.AI, we believe the true industrial revolution is not the replacement of workers by machines,
                but the creation of an intelligent decision network—powered by an Industrial LLM—that redefines the
                relationship between humans and production, opening new possibilities for the industries and societies of the future.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="relative py-20 bg-zinc-950/80 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto text-center mb-16">
          <div class="inline-flex items-center gap-4 mb-8">
            <div class="w-12 h-px bg-red-500"></div>
            <h2 class="text-3xl md:text-4xl font-black text-white tracking-wide uppercase">
              GET IN TOUCH
            </h2>
            <div class="w-12 h-px bg-red-500"></div>
          </div>
          <p class="text-lg text-zinc-400 font-mono leading-relaxed mb-12">
            // READY TO TRANSFORM YOUR MANUFACTURING OPERATIONS? CONTACT PLANTCORE.AI
          </p>

          <!-- Industrial Action Panel -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-2xl mx-auto mb-16">
            <a href="#contact-form"
               class="group relative bg-red-600 border-2 border-red-500 text-white p-6 font-bold tracking-wide uppercase transition-all duration-300 hover:bg-red-700"
               style="clip-path: polygon(0 0, calc(100% - 16px) 0, 100% 16px, 100% 100%, 16px 100%, 0 calc(100% - 16px))">
              <div class="flex items-center justify-center gap-3">
                <div class="w-4 h-4 border-2 border-current relative">
                  <div class="absolute inset-1 bg-current"></div>
                </div>
                REQUEST DEMO
              </div>
              <div class="text-xs font-mono mt-2">SCHEDULE A DEMO</div>
            </a>

            <a href="#contact-form"
               class="group relative bg-transparent border-2 border-zinc-400 text-zinc-300 p-6 font-bold tracking-wide uppercase transition-all duration-300 hover:border-white hover:text-white"
               style="clip-path: polygon(16px 0, 100% 0, calc(100% - 16px) 100%, 0 100%, 0 16px)">
              <div class="flex items-center justify-center gap-3">
                <div class="w-4 h-4 border border-current"></div>
                JOIN PILOT
              </div>
              <div class="text-xs font-mono mt-2">PILOT PROGRAM</div>
            </a>
          </div>
        </div>

        <div id="contact-form" class="bg-black/80 border-2 border-zinc-800 p-8"
             style="clip-path: polygon(24px 0, 100% 0, 100% calc(100% - 24px), calc(100% - 24px) 100%, 0 100%, 0 24px)">
          {/* Contact form can be integrated here when FORMS config is available */}
          <div class="text-center py-12">
            <p class="text-zinc-400 font-mono">CONTACT FORM</p>
            <p class="text-sm text-zinc-500 mt-2">// Contact Plantcore.AI for demo and pilot program inquiries</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</PageLayout>
