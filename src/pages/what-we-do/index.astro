---
import PageLayout from "../../layouts/PageLayout.astro";
import H1 from "../../components/ui/H1.astro";
import ProjectCard from "../../components/shared/ProjectCard.astro";
import { getTranslations, getLanguageFromURL } from "../../lib/translations";
import { getServerTheme, buildUrlWithParams } from "../../lib/theme-utils";

// Get current language from URL (SSR-compatible)
const lang = getLanguageFromURL(Astro.url);
const t = getTranslations(lang);
const pageContent: any = t.pages?.whatWeDo || {}; // Using any type to handle missing fields

// Get current theme from URL parameters using utility function
const currentTheme = getServerTheme(Astro.url);

// Handle base path for GitHub Pages compatibility with language and theme
const getFullPath = (path: string) => {
  const basePath = path.startsWith('/') ? `${import.meta.env.BASE_URL}${path.slice(1)}` : path;
  return buildUrlWithParams(basePath, currentTheme, lang);
};

// Define enhanced project type with status and metrics
interface Project {
  id: string;
  title: string;
  description: string;
  href: string;
  category: string;
  status: 'active' | 'ongoing' | 'upcoming';
  participants?: string;
  nextDate?: string;
  impact?: string;
}

// Get enhanced projects data with status and metrics
const projects: Project[] = pageContent.projects || [
  {
    id: 'aiHackathon',
    title: 'AI for Better Boston',
    description: 'Rooted in our own experience of running a community-based NGO (Workers Assist), Sinthome Hackathon brings real-world challenges to AI practitioners and university students, creating a space for mutual learning and development of practical solutions for social good.',
    href: '/what-we-do/ai-hackathon/',
    category: 'Hackathon for social good',
    status: 'upcoming',
    nextDate: 'Expected: February 2026',
    impact: 'Help wanted'
  },
  {
    id: 'workersAssist',
    title: 'Workers Assist',
    description: 'A nonprofit organization dedicated to fostering a mutual-support community for Asian labor workers in the Boston area.',
    href: '/what-we-do/workers-assist',
    category: 'Workers Assist',
    status: 'active',
    impact: 'Free sessions every weekday evening and monthly gatherings'
  },
  {
    id: 'plantcoreAi',
    title: 'Plantcore AI',
    description: 'Building the first Industrial Vertical Large Language Model (LLM) by deploying AI Agents that capture real-time Context-Decision-Outcome (CDO) data from factory floors.',
    href: '/what-we-do/plantcore-ai',
    category: 'Factory AI Solution',
    status: 'ongoing',
    impact: 'Reshaping the future of industry'
  },
  {
    id: 'srtp',
    title: 'S.R.T.P. Public Lecture',
    description: 'In our weekly lectures and community activities, every member is encouraged to take part in the collective study of leftist and critical theories.',
    href: '/what-we-do/srtp',
    category: 'Public Lecture',
    status: 'active',
    participants: 'Every Saturday in person and online'
  }
];
---

<PageLayout title="What We Do - Sinthome" useInfoLayout={true} theme={currentTheme}>
    <H1>{pageContent.title || 'What We Do'}</H1>

    <div class="space-y-12">
      <!-- Introduction -->
      <section class="max-w-4xl">
        <p class="text-lg leading-relaxed" style="color: var(--theme-text-secondary);">
          {pageContent.subtitle || 'We are committed to leveraging technology and innovation to create positive social impact. Through our various programs and initiatives, we work to address critical challenges in our community.'}
        </p>
      </section>

      <!-- Enhanced Projects Grid -->
      <section>
        <h2 class="text-3xl font-bold mb-8" style="color: var(--theme-text-primary);">{pageContent.projectsTitle || 'Our Programs'}</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {projects.map((project) => (
            <a
              href={getFullPath(project.href)}
              class="group relative overflow-hidden rounded-xl transition-all duration-300"
              style="background-color: var(--theme-bg-card); border: 1px solid var(--theme-border);"
            >
              {/* Background gradient effect */}
              <div class={`absolute inset-0 bg-gradient-to-br opacity-5 group-hover:opacity-10 transition-opacity ${
                project.status === 'active' ? 'from-green-500 to-blue-500' :
                project.status === 'ongoing' ? 'from-blue-500 to-purple-500' :
                'from-yellow-500 to-orange-500'
              }`}></div>

              <div class="relative p-6">
                {/* Header with status */}
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="text-xl font-bold group-hover:text-red-400 transition-colors mb-2" style="color: var(--theme-text-primary);">
                      {project.title}
                    </h3>
                    <span class="text-xs uppercase tracking-wide font-semibold" style="color: var(--theme-text-secondary);">
                      {project.category}
                    </span>
                  </div>

                  {/* Status badge */}
                  <span class={`px-2 py-1 text-xs font-medium rounded-md ${
                    project.status === 'active' ? 'theme-badge-green' :
                    project.status === 'ongoing' ? 'theme-badge-blue' :
                    'theme-badge-yellow'
                  }`}>
                    {project.status.toUpperCase()}
                  </span>
                </div>

                {/* Description */}
                <p class="text-sm mb-4 line-clamp-3" style="color: var(--theme-text-secondary);">
                  {project.description}
                </p>

                {/* Metrics */}
                {(project.participants || project.nextDate || project.impact) && (
                  <div class="flex flex-wrap gap-3 pt-4" style="border-top: 1px solid var(--theme-border);">
                    {project.participants && (
                      <span class="text-xs" style="color: var(--theme-text-muted);">
                        {project.participants}
                      </span>
                    )}
                    {project.nextDate && (
                      <span class="text-xs" style="color: var(--theme-text-muted);">
                        {project.nextDate}
                      </span>
                    )}
                    {project.impact && (
                      <span class="text-xs" style="color: var(--theme-text-muted);">
                        {project.impact}
                      </span>
                    )}
                  </div>
                )}

                {/* Hover arrow */}
                <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
                  <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Enhanced Call to Action -->
      <section class="text-center py-12">
        <div class="max-w-2xl mx-auto">
          <h2 class="text-3xl font-bold mb-4" style="color: var(--theme-text-primary);">{pageContent.callToAction?.title || 'Get Involved'}</h2>
          <p class="text-lg mb-8" style="color: var(--theme-text-secondary);">
            {pageContent.callToAction?.description || "Join us in making a difference. Whether you're a volunteer, partner, or supporter, there's a place for you."}
          </p>
          <div class="flex gap-4 justify-center">
            <a
              href={getFullPath("/contact")}
              class="inline-flex items-center gap-2 px-8 py-4 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-all duration-300 hover:scale-105"
            >
              {pageContent.callToAction?.buttons?.learnMore || 'Learn How to Help'}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href={getFullPath("/donate")}
              class="inline-flex items-center gap-2 px-8 py-4 border-2 font-semibold rounded-lg transition-all duration-300"
              style="background-color: transparent; border-color: var(--theme-border); color: var(--theme-text-secondary);"
            >
              Support Our Work
            </a>
          </div>
        </div>
      </section>
    </div>
</PageLayout>

<style>
  /* Theme-aware badge styles */
  .theme-badge-green {
    background-color: rgba(34, 197, 94, 0.15);
    color: #22c55e;
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  .theme-badge-blue {
    background-color: rgba(59, 130, 246, 0.15);
    color: #3b82f6;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .theme-badge-yellow {
    background-color: rgba(234, 179, 8, 0.15);
    color: #eab308;
    border: 1px solid rgba(234, 179, 8, 0.3);
  }

  /* Dark theme adjustments */
  html.theme-dark .theme-badge-green {
    background-color: rgba(34, 197, 94, 0.2);
    color: #4ade80;
    border-color: rgba(34, 197, 94, 0.5);
  }

  html.theme-dark .theme-badge-blue {
    background-color: rgba(59, 130, 246, 0.2);
    color: #60a5fa;
    border-color: rgba(59, 130, 246, 0.5);
  }

  html.theme-dark .theme-badge-yellow {
    background-color: rgba(234, 179, 8, 0.2);
    color: #facc15;
    border-color: rgba(234, 179, 8, 0.5);
  }
</style>
