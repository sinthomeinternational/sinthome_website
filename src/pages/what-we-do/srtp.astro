          <div class="absolute -inset-0.5 bg-gradient-to-r from-red-900/10 via-red-800/5 to-red-900/10 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-500"></div>

          <!-- Main card -->
          <div class="relative bg-gradient-to-br from-zinc-900/90 to-zinc-800/70 border border-zinc-700/50 rounded-lg p-6 backdrop-blur-sm">
            <!-- Card header with schedule inline -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
              <div class="flex items-center mb-2 sm:mb-0">
                <div class="w-2 h-2 bg-red-500 rounded-full mr-3"></div>
                <h3 class="text-xl font-semibold text-red-400">Lectures & Seminars in Boston</h3>
              </div>
              <div class="flex items-center text-sm">
                <span class="text-red-400 font-bold mr-2">ðŸ“…</span>
