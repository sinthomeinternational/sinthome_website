---
import RedWhitePageLayout from "../../../layouts/RedWhitePageLayout.astro";
import H1 from "../../../components/ui/H1.astro";
import { Image } from 'astro:assets';

// Import project images
import communityPhoto from "../../../assets/workers-assist/合影.jpg";
import picnicPhoto from "../../../assets/workers-assist/野餐.jpg";
---

<RedWhitePageLayout title="Workers Assist - Sinthome" useInfoLayout={true}>
    <!-- Hero Section with Background Image -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden -mx-4 sm:-mx-6 lg:-mx-8">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <Image
          src={picnicPhoto}
          alt="Workers Assist community picnic event"
          width={1920}
          height={1080}
          loading="eager"
          format="webp"
          quality={90}
          class="w-full h-full object-cover"
        />
        <!-- Light Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-white/80 via-white/70 to-white/90"></div>
      </div>
      
      <!-- Hero Content -->
      <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-black text-black mb-6 tracking-tight">
          Workers Assist
        </h1>
        <h2 class="text-2xl md:text-3xl font-bold text-black mb-4">
          <span class="text-[#FF6B35]">Mutual Support Community</span> for Asian Labor Workers
        </h2>
        <p class="text-[#FF6B35] font-black text-lg md:text-xl uppercase tracking-wider mb-8">
          SOLIDARITY • EMPOWERMENT • COLLECTIVE ACTION
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#about" class="inline-flex items-center px-8 py-4 bg-[#FF6B35] text-white font-bold rounded-lg hover:bg-[#E55A2B] transition-colors duration-300 transform hover:scale-105">
            Learn More
          </a>
          <a href="#join" class="inline-flex items-center px-8 py-4 bg-transparent border-2 border-black text-black font-bold rounded-lg hover:bg-black hover:text-white transition-all duration-300">
            Join Us
          </a>
        </div>
      </div>
    </section>

    <!-- Key Statistics Section -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div class="space-y-2">
            <div class="text-4xl md:text-5xl font-black text-[#FF6B35]">400+</div>
            <div class="text-black font-semibold">Active Members</div>
          </div>
          <div class="space-y-2">
            <div class="text-4xl md:text-5xl font-black text-[#FF6B35]">50+</div>
            <div class="text-black font-semibold">Volunteers</div>
          </div>
          <div class="space-y-2">
            <div class="text-4xl md:text-5xl font-black text-[#FF6B35]">3</div>
            <div class="text-black font-semibold">Service Programs</div>
          </div>
          <div class="space-y-2">
            <div class="text-4xl md:text-5xl font-black text-[#FF6B35]">2023</div>
            <div class="text-black font-semibold">Founded</div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Us Section -->
    <section id="about" class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-black text-black mb-6">About Us</h2>
            <div class="space-y-4 text-lg text-gray-700 leading-relaxed">
              <p>
                Workers Assist is a nonprofit organization dedicated to fostering a mutual-support community for Asian labor workers in the Boston area. Since its founding in 2023, WA has grown into a vibrant community platform of more than 400 active members. Together, we provide a wide range of supportive services, including free language learning, everyday life skills training, and youth education programs.
              </p>
              <p>
                At WA, we believe in more than just offering help—we choose to live alongside our community. By addressing real problems in daily life and fostering connections of trust and care, we work toward a future where mutual support strengthens every member of our community.
              </p>
            </div>
          </div>
          <div class="flex justify-center">
            <div class="relative w-80 h-80 rounded-2xl overflow-hidden border-4 border-[#FF6B35] shadow-lg">
              <Image
                src={communityPhoto}
                alt="Workers Assist community members gathering together"
                width={400}
                height={400}
                loading="lazy"
                format="webp"
                quality={85}
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What We Do Section -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-black text-black mb-4">What We Do</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            We provide a wide range of supportive services, including free language learning, everyday life skills training, and youth education programs.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Free Language Learning -->
          <div class="bg-white rounded-xl p-8 border border-gray-200 hover:border-[#FF6B35] transition-all duration-300 group hover:transform hover:scale-105 shadow-lg">
            <div class="w-16 h-16 bg-[#FF6B35] rounded-lg flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-black mb-4">Free Language Learning</h3>
            <p class="text-gray-600 mb-6">
              Community conversation corners, hospital/school scenario phrase cards, job interview practice, and translation support.
            </p>
            <p class="text-[#FF6B35] font-semibold mb-4">
              Serving 400+ workers with essential communication skills for workplace and daily life
            </p>
            <a href="#contact" class="inline-flex items-center text-[#FF6B35] font-semibold hover:text-black transition-colors">
              Learn More →
            </a>
          </div>

          <!-- Youth Education Programs -->
          <div class="bg-white rounded-xl p-8 border border-gray-200 hover:border-[#FF6B35] transition-all duration-300 group hover:transform hover:scale-105 shadow-lg">
            <div class="w-16 h-16 bg-[#FF6B35] rounded-lg flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-black mb-4">Youth Education Programs</h3>
            <p class="text-gray-600 mb-6">
              Homework support, interest groups, city exploration; safe and fun learning environments for young people.
            </p>
            <a href="#contact" class="inline-flex items-center text-[#FF6B35] font-semibold hover:text-black transition-colors">
              Learn More →
            </a>
          </div>

          <!-- Everyday Life Skills Training -->
          <div class="bg-white rounded-xl p-8 border border-gray-200 hover:border-[#FF6B35] transition-all duration-300 group hover:transform hover:scale-105 shadow-lg">
            <div class="w-16 h-16 bg-[#FF6B35] rounded-lg flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-black mb-4">Everyday Life Skills Training</h3>
            <p class="text-gray-600 mb-6">
              Community shop partnerships, medical process guides, housing and commute experience sharing—real problems solved on-site.
            </p>
            <a href="#contact" class="inline-flex items-center text-[#FF6B35] font-semibold hover:text-black transition-colors">
              Learn More →
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Join Us Section -->
    <section id="join" class="py-16 bg-[#FF6B35]">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-black text-white mb-8">Join Us</h2>
        <p class="text-lg text-white/90 mb-8">
          We are currently recruiting:
        </p>
        <div class="grid md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <h3 class="text-xl font-bold text-white mb-2">Volunteer Teachers</h3>
            <p class="text-white/80">Help teach English and life skills</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <h3 class="text-xl font-bold text-white mb-2">Business Development Volunteers</h3>
            <p class="text-white/80">Expand our community network</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <h3 class="text-xl font-bold text-white mb-2">Community Partners</h3>
            <p class="text-white/80">Local vendors, restaurants, service providers, and peer NGOs</p>
          </div>
        </div>
        <p class="text-lg text-white/90 mb-8">
          Join English class and youth program participation as student, please contact:
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="tel:+18578331708" 
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-[#FF6B35] font-bold rounded-lg hover:bg-gray-100 transition-colors duration-300 transform hover:scale-105"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
            </svg>
            +1 857-833-1708
          </a>
          <a 
            href="/redwhite/contact" 
            class="inline-flex items-center gap-2 px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-lg hover:bg-white hover:text-[#FF6B35] transition-all duration-300"
          >
            Contact Us
          </a>
        </div>
      </div>
    </section>
</RedWhitePageLayout>