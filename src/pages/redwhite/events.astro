---
import RedWhitePageLayout from "../../layouts/RedWhitePageLayout.astro";
import H1 from "../../components/ui/H1.astro";
import EventCard from "../../components/shared/EventCard.astro";
---

<RedWhitePageLayout title="Events - Sinthome" useInfoLayout={true}>
    <H1>Upcoming Events</H1>

    <div class="space-y-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Introduction -->
      <section>
        <p class="text-lg text-gray-700 leading-relaxed">
          Join us at our upcoming events to learn, network, and make a difference.
          From hackathons to workshops, there's something for everyone who wants to contribute to positive change.
        </p>
      </section>

      <!-- Upcoming Events -->
      <section id="upcoming">
        <h2 class="text-2xl font-bold text-black mb-6">Upcoming Events</h2>
        <div class="space-y-6">
          <EventCard
            title="AI Hackathon 2025"
            date="March 15-17, 2025"
            location="Innovation Hub, Downtown"
            description="48-hour hackathon focused on building AI solutions for social good. Open to developers, designers, and innovators of all skill levels."
            registrationUrl="https://forms.gle/example"
            variant="redwhite"
          />

          <EventCard
            title="Tech for Good Workshop"
            date="February 20, 2025"
            location="Virtual Event"
            description="Learn how to leverage technology for social impact. This workshop covers project planning, funding opportunities, and implementation strategies."
            registrationUrl="https://forms.gle/example"
            variant="redwhite"
          />

          <EventCard
            title="Community Impact Summit"
            date="April 5, 2025"
            location="Community Center, Main Street"
            description="Annual gathering of non-profits, social enterprises, and changemakers. Share experiences, learn best practices, and forge new partnerships."
            registrationUrl="https://forms.gle/example"
            variant="redwhite"
          />

          <EventCard
            title="Volunteer Orientation"
            date="First Saturday of every month"
            location="Our Office + Virtual Option"
            description="New volunteer orientation session. Learn about our programs, find the right fit for your skills, and start making an impact."
            registrationUrl="https://forms.gle/example"
            variant="redwhite"
          />
        </div>
      </section>

      <!-- Past Events -->
      <section id="past">
        <h2 class="text-2xl font-bold text-black mb-6">Past Events</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <h3 class="font-semibold text-black">Fall Fundraiser Gala</h3>
            <p class="text-sm text-gray-600 mt-1">October 2024 • Raised $50,000 for programs</p>
          </div>
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <h3 class="font-semibold text-black">Summer Code Camp</h3>
            <p class="text-sm text-gray-600 mt-1">July 2024 • 100+ students trained</p>
          </div>
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <h3 class="font-semibold text-black">Green Tech Symposium</h3>
            <p class="text-sm text-gray-600 mt-1">May 2024 • 200+ attendees</p>
          </div>
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <h3 class="font-semibold text-black">Winter Workshop Series</h3>
            <p class="text-sm text-gray-600 mt-1">December 2023 • 5 workshops, 150 participants</p>
          </div>
        </div>
      </section>

      <!-- Stay Updated -->
      <section class="mt-12 p-8 bg-gray-50 border border-gray-200 rounded-lg text-center">
        <h2 class="text-2xl font-bold text-black mb-4">Never Miss an Event</h2>
        <p class="text-gray-700 mb-6">
          Subscribe to our newsletter to receive updates about upcoming events, workshops, and opportunities.
        </p>
        <a
          href="/redwhite/contact"
          class="inline-block px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors"
        >
          Subscribe to Newsletter
        </a>
      </section>

      <!-- Host an Event -->
      <section>
        <h2 class="text-2xl font-bold text-black mb-4">Host an Event with Us</h2>
        <p class="text-gray-700 mb-4">
          Have an idea for an event that aligns with our mission? We're always looking for partners
          and collaborators to organize impactful events.
        </p>
        <a
          href="/redwhite/contact"
          class="inline-block px-6 py-3 bg-gray-200 text-black rounded-lg hover:bg-gray-300 transition-colors"
        >
          Propose an Event
        </a>
      </section>
    </div>
</RedWhitePageLayout>