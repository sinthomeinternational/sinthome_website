---
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';
import H1 from '../../components/ui/H1.astro';
import { getLanguageFromURL } from '../../lib/translations';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const events = await getCollection('srtpEvents');
  const eventsWithContent = await Promise.all(
    events.map(async (event) => ({
      params: { slug: event.id },
      props: {
        event,
        content: await render(event)
      },
    }))
  );
  return eventsWithContent;
}

interface Props {
  event: CollectionEntry<'srtpEvents'>;
  content: Awaited<ReturnType<typeof render>>;
}

const { event, content } = Astro.props;
const { Content } = content;
const lang = getLanguageFromURL(Astro.url);

// Format date
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<PageLayout
  title={`${event.data.title} - S.R.T.P. - Sinthome`}
  description={event.data.synopsis}
>
  <!-- Back Navigation -->
  <nav class="mb-8">
    <a
      href="/what-we-do/srtp-collection"
      class="inline-flex items-center gap-2 text-zinc-400 hover:text-white transition"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to S.R.T.P. Events
    </a>
  </nav>

  <!-- Event Header -->
  <header class="mb-12">
    <!-- Event Type Badge -->
    <span class="inline-block px-3 py-1 text-sm font-medium bg-red-600/20 text-red-400 rounded-full mb-4">
      {event.data.type}
    </span>

    <!-- Title (bilingual) -->
    <H1>{lang === 'zh' ? event.data.titleZh : event.data.title}</H1>

    {lang !== 'zh' && event.data.titleZh && (
      <p class="text-lg text-zinc-500 mt-2">{event.data.titleZh}</p>
    )}

    <!-- Event Metadata -->
    <div class="flex flex-wrap gap-4 mt-6 text-zinc-400">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>{formatDate(event.data.date)}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{event.data.duration}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>{event.data.location}</span>
      </div>
    </div>

    <!-- Recording Link -->
    {event.data.recordingUrl && (
      <div class="mt-6">
        <a
          href={event.data.recordingUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"></path>
          </svg>
          Watch Recording
        </a>
      </div>
    )}
  </header>

  <!-- Event Images Gallery -->
  {(event.data.poster || event.data.eventPhoto) && (
    <section class="mb-12">
      <div class="grid md:grid-cols-2 gap-6">
        {event.data.poster && (
          <div class="group relative overflow-hidden rounded-xl bg-zinc-900/50 border border-zinc-800">
            <Image
              src={event.data.poster}
              alt={`${event.data.title} poster`}
              class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-105"
              loading="eager"
              format="webp"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-4 left-4">
                <span class="text-white text-sm font-medium bg-black/70 px-3 py-1 rounded-full">
                  Event Poster
                </span>
              </div>
            </div>
          </div>
        )}

        {event.data.eventPhoto && (
          <div class="group relative overflow-hidden rounded-xl bg-zinc-900/50 border border-zinc-800">
            <Image
              src={event.data.eventPhoto}
              alt={`${event.data.title} event photo`}
              class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-105"
              loading="eager"
              format="webp"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-4 left-4">
                <span class="text-white text-sm font-medium bg-black/70 px-3 py-1 rounded-full">
                  Event Photo
                </span>
              </div>
            </div>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Main Content Grid -->
  <div class="grid lg:grid-cols-3 gap-12">
    <!-- Left Column: Main Content -->
    <div class="lg:col-span-2">
      <!-- Synopsis -->
      <section class="mb-12">
        <div class="bg-gradient-to-r from-red-900/20 via-zinc-900/30 to-transparent border border-red-600/20 rounded-xl p-8">
          <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
            <div class="w-8 h-8 bg-red-600/20 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            Synopsis
          </h2>
          <p class="text-lg text-zinc-300 leading-relaxed font-light">
            {lang === 'zh' ? event.data.synopsisZh : event.data.synopsis}
          </p>
        </div>
      </section>

      <!-- Quote -->
      {event.data.quote && (
        <section class="mb-12">
          <div class="relative">
            <div class="absolute -top-2 -left-2">
              <svg class="w-8 h-8 text-red-600/50" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
              </svg>
            </div>
            <blockquote class="bg-zinc-900/30 border border-zinc-800 rounded-xl p-8 pl-12">
              <p class="text-xl text-zinc-300 italic leading-relaxed font-light">
                "{event.data.quote}"
              </p>
            </blockquote>
          </div>
        </section>
      )}

      <!-- Event Description -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
          <div class="w-8 h-8 bg-red-600/20 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          Event Details
        </h2>
        <div class="prose prose-invert prose-zinc prose-lg max-w-none">
          {Content && <Content />}
        </div>
      </section>

      <!-- Tags -->
      <section class="mb-12">
        <h3 class="text-xl font-semibold text-white mb-6 flex items-center gap-3">
          <div class="w-6 h-6 bg-red-600/20 rounded flex items-center justify-center">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          Topics Covered
        </h3>
        <div class="flex flex-wrap gap-3">
          {event.data.tags.map((tag) => (
            <span class="px-4 py-2 bg-gradient-to-r from-red-900/30 to-zinc-900/50 border border-red-600/30 text-red-300 rounded-lg text-sm font-medium hover:from-red-900/40 hover:to-zinc-900/60 transition-all duration-200">
              #{tag}
            </span>
          ))}
        </div>
      </section>
    </div>

    <!-- Right Column: Sidebar -->
    <aside class="lg:col-span-1">
      <!-- Event Info Card -->
      <div class="bg-gradient-to-br from-zinc-900/80 via-zinc-900/50 to-zinc-900/30 border border-zinc-700 rounded-xl p-6 mb-6 sticky top-24 backdrop-blur-sm">
        <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
          <div class="w-8 h-8 bg-red-600/20 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          Event Details
        </h3>

        <dl class="space-y-5">
          <div class="flex items-start gap-3">
            <div class="w-5 h-5 text-red-500 mt-1">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <dt class="text-zinc-400 text-sm font-medium mb-1">Speaker</dt>
              <dd class="text-white font-semibold">{event.data.speaker}</dd>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-5 h-5 text-red-500 mt-1">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <dt class="text-zinc-400 text-sm font-medium mb-1">Date</dt>
              <dd class="text-white font-semibold">{formatDate(event.data.date)}</dd>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-5 h-5 text-red-500 mt-1">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <dt class="text-zinc-400 text-sm font-medium mb-1">Duration</dt>
              <dd class="text-white font-semibold">{event.data.duration}</dd>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-5 h-5 text-red-500 mt-1">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <dt class="text-zinc-400 text-sm font-medium mb-1">Location</dt>
              <dd class="text-white font-semibold">{event.data.location}</dd>
            </div>
          </div>

          {event.data.recordingUrl && (
            <div class="flex items-start gap-3">
              <div class="w-5 h-5 text-red-500 mt-1">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <dt class="text-zinc-400 text-sm font-medium mb-1">Recording</dt>
                <dd>
                  <a
                    href={event.data.recordingUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-red-400 hover:text-red-300 font-semibold transition-colors inline-flex items-center gap-2"
                  >
                    Available on Bilibili
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </a>
                </dd>
              </div>
            </div>
          )}
        </dl>

        <!-- CTA Section -->
        <div class="mt-8 pt-6 border-t border-zinc-700">
          <h4 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
            <div class="w-6 h-6 bg-red-600/20 rounded flex items-center justify-center">
              <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            Join Our Community
          </h4>
          <p class="text-sm text-zinc-400 mb-6 leading-relaxed">
            S.R.T.P. events are free and open to all. Join us every Saturday for revolutionary theory and practice!
          </p>
          <div class="space-y-3">
            <a
              href="/contact"
              class="block w-full text-center px-4 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold rounded-lg hover:from-red-700 hover:to-red-800 transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Get Updates
            </a>
            <a
              href="/what-we-do/srtp-collection"
              class="block w-full text-center px-4 py-3 border border-zinc-600 text-zinc-300 font-medium rounded-lg hover:bg-zinc-800 hover:border-zinc-500 transition-all duration-200"
            >
              Browse All Events
            </a>
          </div>
        </div>
      </div>
    </aside>
  </div>

  <!-- Related Events -->
  <section class="mt-16 pt-12 border-t border-zinc-800">
    <h2 class="text-2xl font-bold text-white mb-6">More S.R.T.P. Events</h2>
    <div class="flex gap-4">
      <a
        href="/what-we-do/srtp-collection"
        class="px-6 py-3 bg-zinc-900 text-white font-medium rounded-lg hover:bg-zinc-800 transition"
      >
        View All Events
      </a>
      <a
        href="/what-we-do/srtp-collection#join"
        class="px-6 py-3 border border-zinc-700 text-zinc-300 font-medium rounded-lg hover:bg-zinc-900 transition"
      >
        Join Our Community
      </a>
    </div>
  </section>
</PageLayout>

<style>
  /* Enhanced prose styling for event content */
  .prose {
    color: rgb(212 212 216);
    line-height: 1.75;
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgb(220 38 38 / 0.3);
    position: relative;
  }

  .prose h2::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 60px;
    height: 2px;
    background: linear-gradient(to right, rgb(220 38 38), rgb(220 38 38 / 0.3));
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-top: 2rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .prose h3::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(to bottom, rgb(220 38 38), rgb(220 38 38 / 0.5));
    border-radius: 2px;
  }

  .prose p {
    color: rgb(212 212 216);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .prose ul {
    list-style: none;
    color: rgb(212 212 216);
    margin-bottom: 1.5rem;
    padding-left: 0;
  }

  .prose ul > li {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .prose ul > li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: rgb(220 38 38);
    font-weight: bold;
  }

  .prose ol {
    color: rgb(212 212 216);
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose ol > li {
    margin-bottom: 0.75rem;
    padding-left: 0.5rem;
  }

  .prose strong {
    color: white;
    font-weight: 700;
  }

  .prose em {
    color: rgb(161 161 170);
    font-style: italic;
  }

  .prose blockquote {
    border-left: 4px solid rgb(220 38 38);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgb(161 161 170);
    background: rgb(39 39 42 / 0.3);
    padding: 1.5rem;
    border-radius: 0.5rem;
  }

  .prose code {
    background: rgb(39 39 42);
    color: rgb(220 38 38);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .prose pre {
    background: rgb(24 24 27);
    border: 1px solid rgb(63 63 70);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose a {
    color: rgb(248 113 113);
    text-decoration: underline;
    text-decoration-color: rgb(220 38 38 / 0.3);
    text-underline-offset: 2px;
    transition: all 0.2s;
  }

  .prose a:hover {
    color: rgb(252 165 165);
    text-decoration-color: rgb(220 38 38);
  }

  /* Image styling within prose */
  .prose img {
    border-radius: 0.75rem;
    border: 1px solid rgb(63 63 70);
    margin: 2rem 0;
    max-width: 100%;
    height: auto;
  }
</style>