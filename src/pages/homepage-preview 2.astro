---
import { Warp } from '@paper-design/shaders-react';
---

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SINTHOME - Homepage Preview</title>
    <meta name="description" content="Homepage preview with custom warp background">
</head>
<body class="h-full overflow-hidden">
    <div class="relative h-screen bg-black text-white overflow-hidden">
        {/* Warp Background */}
        <div class="absolute inset-0 z-0">
            <Warp
                color1="#520000"
                color2="#9d0101"
                color3="#240000"
                speed={0.9}
                swirl={0.77}
                swirlIterations={40}
                shapeScale={0.84}
                rotation={0}
                scale={1.0}
                proportion={1.0}
                softness={0.5}
                distortion={0.5}
                style={{ width: '100%', height: '100%', position: 'absolute' }}
                client:only="react"
            />
        </div>

        {/* Content Overlay */}
        <div class="relative z-10 h-full flex flex-col">
            {/* Navigation */}
            <nav class="flex justify-between items-center px-8 py-6 bg-black/30 backdrop-blur-sm">
                <div class="text-2xl font-bold tracking-wider">
                    <span class="text-red-500">SIN</span><span class="text-white">THOME</span>
                </div>
                <div class="flex space-x-8">
                    <a href="#" class="hover:text-red-400 transition">About</a>
                    <a href="#" class="hover:text-red-400 transition">Projects</a>
                    <a href="#" class="hover:text-red-400 transition">Events</a>
                    <a href="#" class="hover:text-red-400 transition">Contact</a>
                    <a href="#" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded transition">Donate</a>
                </div>
            </nav>

            {/* Hero Content */}
            <div class="flex-1 flex items-center justify-center px-8">
                <div class="text-center max-w-4xl">
                    <h1 class="text-6xl md:text-7xl font-bold mb-6 animate-fade-in">
                        <span class="block text-white">Empowering</span>
                        <span class="block text-red-500">Innovation</span>
                    </h1>
                    <p class="text-xl md:text-2xl mb-8 text-zinc-300">
                        Building bridges between technology and community through collaborative projects and meaningful impact
                    </p>
                    <div class="flex gap-4 justify-center">
                        <button class="bg-red-600 hover:bg-red-700 px-8 py-3 rounded-lg text-lg font-medium transition transform hover:scale-105">
                            Get Started
                        </button>
                        <button class="border border-red-600 hover:bg-red-600/10 px-8 py-3 rounded-lg text-lg font-medium transition">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>

            {/* Feature Cards */}
            <div class="px-8 pb-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
                    <div class="bg-black/40 backdrop-blur-md p-6 rounded-lg border border-red-900/30 hover:border-red-600/50 transition">
                        <div class="text-red-500 text-3xl mb-3">üöÄ</div>
                        <h3 class="text-xl font-semibold mb-2">Innovation Hub</h3>
                        <p class="text-zinc-400">Fostering technological advancement through cutting-edge projects and research</p>
                    </div>
                    <div class="bg-black/40 backdrop-blur-md p-6 rounded-lg border border-red-900/30 hover:border-red-600/50 transition">
                        <div class="text-red-500 text-3xl mb-3">ü§ù</div>
                        <h3 class="text-xl font-semibold mb-2">Community First</h3>
                        <p class="text-zinc-400">Building lasting partnerships that create positive change in our communities</p>
                    </div>
                    <div class="bg-black/40 backdrop-blur-md p-6 rounded-lg border border-red-900/30 hover:border-red-600/50 transition">
                        <div class="text-red-500 text-3xl mb-3">üå±</div>
                        <h3 class="text-xl font-semibold mb-2">Sustainable Impact</h3>
                        <p class="text-zinc-400">Creating solutions that address real-world challenges with long-term vision</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        @keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fade-in 1s ease-out;
        }
    </style>
</body>
</html>