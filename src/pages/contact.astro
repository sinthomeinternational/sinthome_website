---
import H1 from "../components/ui/H1.astro";
import PageLayout from "../layouts/PageLayout.astro";
import ContactMethods from "../components/contact/ContactMethods";
import { SITE_CONFIG } from "../config/site";
---

<PageLayout title="Contact - Sinthome" useInfoLayout={true}>
     <div class="min-h-dvh py-12">
          <!-- Header Section -->
          <div class="text-center mb-16">
               <H1 className="text-red-600 mb-6">Get in Touch</H1>
               <p class="text-xl text-zinc-300 max-w-2xl mx-auto">
                    We're here to connect, collaborate, and create meaningful impact together.
                    Reach out through your preferred platform.
               </p>
          </div>

          <!-- Contact Methods Component -->
          <ContactMethods client:visible />

          <!-- Connect & Collaborate Section -->
          <div class="mt-20 pt-12 border-t border-zinc-800">
               <div class="max-w-4xl mx-auto text-center">
                    <h3 class="text-xl font-semibold text-white mb-4">Connect & Collaborate</h3>
                    <p class="text-zinc-400 mb-8">
                         Interested in working together? We welcome new projects,
                         collaboration opportunities, and partnerships that align with our mission.
                    </p>

                    <!-- Quick Links -->
                    <div class="flex flex-col sm:flex-row justify-center gap-6">
                         <a
                              href="/what-we-do"
                              class="inline-flex items-center text-red-400 hover:text-red-300 transition-colors"
                         >
                              <span class="mr-2">→</span>
                              Learn about our projects
                         </a>
                         <a
                              href="/events"
                              class="inline-flex items-center text-red-400 hover:text-red-300 transition-colors"
                         >
                              <span class="mr-2">→</span>
                              View upcoming events
                         </a>
                         <a
                              href="/donate"
                              class="inline-flex items-center text-red-400 hover:text-red-300 transition-colors"
                         >
                              <span class="mr-2">→</span>
                              Support our mission
                         </a>
                    </div>
               </div>
          </div>

          <!-- Footer Message -->
          <div class="mt-20 text-center">
               <div class="inline-block p-6 bg-gradient-to-r from-red-600/10 to-red-700/10 rounded-2xl border border-red-600/20">
                    <p class="text-zinc-300 text-lg font-medium mb-2">
                         Let's build something meaningful together
                    </p>
                    <p class="text-zinc-400 text-sm">
                         Every connection starts with a conversation
                    </p>
               </div>
          </div>
     </div>
</PageLayout>