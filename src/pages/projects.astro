---
import { Image } from 'astro:assets';
import H1 from "../components/ui/H1.astro";
import PageLayout from "../layouts/PageLayout.astro";
import { assets } from "../lib/assets";

const projects = [
     {
          title: "AC Generator",
          description: "Transform mechanical energy into alternating current, powering the modern electric grid",
          image: assets.projects.acGenerator
     },
     {
          title: "Fluid Propulsion",
          description: "Bladeless turbine using fluid dynamics for efficient, low-friction propulsion.",
          image: assets.projects.fluidPropulsion
     },
     {
          title: "Electro-Magnetic Motor",
          description: "Harness alternating current to produce smooth, efficient rotary motion.",
          image: assets.projects.electroMagneticMotor
     }];
---

<PageLayout title="Projects - Sinthome" useInfoLayout={true}>
     <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh">
          <H1 className="text-red-600"> Projects </H1>

          <ul class="mt-4 sm:mt-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-16 sm:gap-8">
               {projects.map((project) => (
                    <li>
                         <Image src={project.image} alt={project.title} class="aspect-[1/1.33] object-center object-cover rounded-lg shadow-lg mb-4 sm:mb-0 sm:mr-4" />
                         <div class="p-1 sm:p-2">
                              <h2 class="text-base font-semibold" style="color: var(--theme-text-primary);">{project.title}</h2>
                              <p class="text-sm text-balance" style="color: var(--theme-text-secondary);">{project.description}</p>
                         </div>
                    </li>
               ))}
          </ul>
     </div>
</PageLayout>