---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/ui/WarpBackground";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center overflow-auto">
			<div class="absolute w-full h-dvh -z-10">
				{/* New configuration with warmer colors and different parameters */}
				<WarpBackground
					color1="#963636"
					color2="#ffe0e0"
					color3="#ad1a1a"
					speed={0.2}
					swirl={0.84}
					swirlIterations={41}
					shapeScale={0.52}
					rotation={0.7}
					scale={0.1}
					softness={0}
					distortion={0.02}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<!-- Clean, Brutalist Hero Section -->
				<div class="flex-1 flex flex-col justify-center items-center text-center">
					<!-- SINTHOME - Raw, Plain, Powerful -->
					<h1 class="sinthome-title text-white font-black uppercase mb-0 px-12 sm:px-16 md:px-20 lg:px-24">
						SINTHOME
					</h1>

					<!-- Straightforward Tagline -->
					<p class="text-xl sm:text-2xl text-white font-semibold mb-6">
						Knowledge — Critique — Praxis
					</p>

					<!-- Direct Description -->
					<p class="text-base text-white max-w-2xl mx-auto mb-10">
						A public-interest community reconstructing new relations of production through the integration of knowledge learning, theoretical critique, and social praxis
					</p>

					<!-- Plain Practice Tags -->
					<div class="flex flex-wrap justify-center gap-3 mb-10 max-w-3xl">
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Public Lectures
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Psychoanalysis
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Workers Assist
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							AI for Public Good
						</span>
						<span class="px-4 py-2 text-white border border-white rounded-full text-sm">
							Factory AI Solution
						</span>
					</div>

					<!-- Simple, Direct CTAs -->
					<div class="flex flex-col sm:flex-row gap-4">
						<a
							href="#"
							class="px-8 py-4 bg-white text-black font-bold hover:bg-gray-200 transition-colors"
						>
							ABOUT US
						</a>
						<a
							href="#"
							class="px-8 py-4 bg-black text-white font-bold border-2 border-white hover:bg-white hover:text-black transition-colors"
						>
							OUR PROJECTS
						</a>
						<a
							href="#"
							class="px-8 py-4 text-white font-bold border-2 border-white hover:bg-white hover:text-black transition-colors"
						>
							JOIN US
						</a>
					</div>

					<!-- Test Info Banner -->
					<div class="mt-12 p-4 bg-red-900/50 backdrop-blur-sm border border-red-500 rounded-lg max-w-md">
						<h3 class="text-white font-bold mb-2">Zero Softness Test Config #2</h3>
						<pre class="text-xs text-red-200 font-mono text-left">
color1="#963636"
color2="#ffe0e0"
color3="#ad1a1a"
speed={0.2}
swirl={0.84}
swirlIterations={41}
shapeScale={0.52}
rotation={0.7}
scale={0.1}
softness={0}
distortion={0.02}</pre>
						<p class="text-xs text-red-300 mt-2">
							Alternative configuration with warmer tones and different animation parameters
						</p>
					</div>

				</div>

			</div>
		</div>
	</main>
</RootLayout>

<style>
	/* SINTHOME title styling - League Spartan Bold */
	.sinthome-title {
		/* League Spartan - geometric sans-serif with strong, clean lines */
		font-family: 'League Spartan', sans-serif;
		font-weight: 700; /* Bold weight */
		letter-spacing: -0.06em; /* Much tighter spacing for condensed look */
		font-size: min(18vw, 16rem); /* Smaller size, no stretching */
		line-height: 1; /* Natural line height */
		text-rendering: optimizeLegibility;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		color: white;
		/* No horizontal compression - natural width */
		transform: scaleX(1);
		transform-origin: center;
	}
</style>