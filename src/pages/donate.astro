---
import PageLayout from "../layouts/PageLayout.astro";
import H1 from "../components/ui/H1.astro";
import GoogleForm from "../components/forms/GoogleForm";
import { FORMS } from "../config/forms";
import { SITE_CONFIG } from "../config/site";
---

<PageLayout title="Donate - Sinthome" useInfoLayout={true}>
    <H1>Support Our Mission</H1>

    <div class="space-y-8">
      <!-- Introduction -->
      <section>
        <p class="text-lg text-zinc-300 leading-relaxed">
          Your generosity fuels our mission to create positive change through technology and innovation.
          Every contribution, no matter the size, makes a real difference in the lives of those we serve.
        </p>
      </section>

      <!-- Impact of Donations -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-6">Your Impact</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <div class="text-3xl font-bold text-red-500 mb-2">$25</div>
            <p class="text-zinc-300">
              Provides learning materials for one student in our coding bootcamp
            </p>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <div class="text-3xl font-bold text-red-500 mb-2">$50</div>
            <p class="text-zinc-300">
              Covers internet access for a remote learner for one month
            </p>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <div class="text-3xl font-bold text-red-500 mb-2">$100</div>
            <p class="text-zinc-300">
              Sponsors a participant in our AI Hackathon event
            </p>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <div class="text-3xl font-bold text-red-500 mb-2">$500</div>
            <p class="text-zinc-300">
              Funds a complete skills training program for one worker in transition
            </p>
          </div>
        </div>
      </section>

      <!-- Ways to Give -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-6">Ways to Give</h2>

        <div class="space-y-6">
          <!-- One-time Donation -->
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-3">One-Time Donation</h3>
            <p class="text-zinc-300 mb-4">
              Make a single contribution to support our current programs and initiatives.
            </p>
            <div class="flex flex-wrap gap-3">
              <a
                href={SITE_CONFIG.payments.paypal}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
              >
                Donate via PayPal
              </a>
              <a
                href={SITE_CONFIG.payments.venmo}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block px-4 py-2 bg-cyan-600 text-white rounded-lg hover:bg-cyan-700 transition-colors"
              >
                Donate via Venmo
              </a>
            </div>
          </div>

          <!-- Monthly Giving -->
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-3">
              Become a Monthly Supporter
              <span class="ml-2 text-sm text-red-400 font-normal">Recommended</span>
            </h3>
            <p class="text-zinc-300 mb-4">
              Join our community of sustaining donors with a recurring monthly gift.
              Monthly donors receive exclusive updates and invitations to special events.
            </p>
            <a
              href="#donation-form"
              class="inline-block px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors"
            >
              Set Up Monthly Giving
            </a>
          </div>

          <!-- Corporate Sponsorship -->
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-3">Corporate Sponsorship</h3>
            <p class="text-zinc-300 mb-4">
              Partner with us to create lasting impact. Corporate sponsors receive recognition
              and opportunities for employee engagement.
            </p>
            <a
              href="/contact"
              class="inline-block px-4 py-2 bg-zinc-700 text-white rounded-lg hover:bg-zinc-600 transition-colors"
            >
              Learn Who we are Sponsorship
            </a>
          </div>
        </div>
      </section>

      <!-- Donation Interest Form -->
      <section id="donation-form" class="mt-12">
        <h2 class="text-2xl font-bold text-white mb-4">Donation Interest Form</h2>
        <p class="text-zinc-300 mb-6">
          Fill out this form and we'll contact you with donation options that work best for you.
        </p>

        <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-6">
          <GoogleForm
            formId={FORMS.donation.id}
            title={FORMS.donation.title}
            height={FORMS.donation.height}
            client:visible
          />
        </div>
      </section>

      <!-- Other Ways to Help -->
      <section>
        <h2 class="text-2xl font-bold text-white mb-4">Other Ways to Help</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4">
            <h3 class="font-semibold text-red-400 mb-2">Volunteer Your Time</h3>
            <p class="text-zinc-400 text-sm">
              Share your skills and expertise by volunteering with our programs.
            </p>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4">
            <h3 class="font-semibold text-red-400 mb-2">In-Kind Donations</h3>
            <p class="text-zinc-400 text-sm">
              Donate equipment, software licenses, or services to support our work.
            </p>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4">
            <h3 class="font-semibold text-red-400 mb-2">Fundraise for Us</h3>
            <p class="text-zinc-400 text-sm">
              Start a fundraising campaign or host an event to benefit our cause.
            </p>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4">
            <h3 class="font-semibold text-red-400 mb-2">Legacy Giving</h3>
            <p class="text-zinc-400 text-sm">
              Include us in your estate planning to create a lasting impact.
            </p>
          </div>
        </div>
      </section>

      <!-- Tax Information -->
      <section class="mt-12 p-6 bg-yellow-900/20 border border-yellow-800/50 rounded-lg">
        <h3 class="text-lg font-semibold text-yellow-400 mb-2">Tax-Deductible Donations</h3>
        <p class="text-zinc-300 text-sm">
          Sinthome is a registered 501(c)(3) non-profit organization. Your donation is tax-deductible
          to the full extent allowed by law. Our EIN is XX-XXXXXXX. You will receive a receipt for
          your records after making a donation.
        </p>
      </section>

      <!-- Thank You -->
      <section class="text-center mt-12">
        <h2 class="text-2xl font-bold text-white mb-4">Thank You!</h2>
        <p class="text-zinc-300">
          We are deeply grateful for your support. Together, we're building a better future.
        </p>
      </section>
    </div>
</PageLayout>