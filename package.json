{
  "name": "sinthome-nonprofit",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "build:vercel": "astro check && astro build --config astro.config.vercel.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint": "eslint src --ext .astro,.tsx,.ts",
    "lint:fix": "eslint src --ext .astro,.tsx,.ts --fix",
    "format": "prettier --write 'src/**/*.{astro,tsx,ts,css}'",
    "type-check": "tsc --noEmit",
    "pre-commit": "pnpm run check && pnpm run type-check",
    "clean": "rm -rf dist .astro node_modules/.vite",
    "clean:cache": "rm -rf node_modules/.vite node_modules/.astro .astro",
    "reset": "pnpm run clean && pnpm install",
    "reset:full": "rm -rf node_modules && pnpm install",
    "dev:debug": "astro dev --verbose",
    "dev:fresh": "pnpm run clean:cache && pnpm run dev",
    "build:analyze": "astro build --verbose",
    "test": "npm run test:content",
    "test:content": "node scripts/validate-content.js",
    "fix-shader": "./scripts/clear-vite-cache.sh",
    "security:audit": "node scripts/security-audit.js",
    "security:deps": "pnpm audit --audit-level moderate",
    "security:build": "pnpm run build && pnpm run security:audit",
    "security:headers": "curl -I https://sinthome-website.vercel.app | grep -E '(Strict-Transport|X-Frame|X-Content|Content-Security)'",
    "deploy:secure": "pnpm run security:build && pnpm run build:vercel"
  },
  "dependencies": {
    "@astrojs/react": "^4.2.5",
    "@astrojs/vercel": "^8.2.8",
    "@paper-design/shaders-react": "^0.0.29",
    "@tailwindcss/vite": "^4.1.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "astro": "^5.7.5",
    "astro-loading-indicator": "^0.7.0",
    "clsx": "^2.1.1",
    "motion": "^12.9.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.34.1",
    "tailwindcss": "^4.1.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.4",
    "glob": "^11.0.3",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.12.3",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1"
  }
}
