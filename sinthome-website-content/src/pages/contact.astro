---
import H1 from "../components/ui/H1.astro";
import PageLayout from "../layouts/PageLayout.astro";
import { SITE_CONFIG } from "../config/site";
import SocialMediaSection from "../components/ui/SocialMediaSection";
---

<PageLayout title="Contact - Sinthome" useInfoLayout={true}>
    <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh flex flex-col justify-between">

        <div>
            <H1 className="text-red-600">How can we help?</H1>
            <p class="mt-4 md:mt-8 lg:mt-12 text-xl xl:text-2xl text-black text-balance">
                Interested in working together?
                Get in touch for new projects and collaboration opportunities.
            </p>

            <div class="mt-8 sm:mt-12">
                <h2 class="text-2xl font-bold text-black mb-6">Get in Touch</h2>

                <a href={`mailto:${SITE_CONFIG.contact.email}`} class="mb-8 w-fit group flex items-center gap-1 text-base lg:text-xl text-black hover:text-gray-800">
                    {SITE_CONFIG.contact.email}
                    <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="24" height="24" viewBox="0 0 24 24">
                        <title>Arrow Icon</title>
                        <path fill="currentColor" d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2S2 6.477 2 12s4.477 10 10 10" opacity=".5"/>
                        <path fill="currentColor" d="M13.53 8.47a.75.75 0 1 0-1.06 1.06l1.72 1.72H8a.75.75 0 0 0 0 1.5h6.19l-1.72 1.72a.75.75 0 1 0 1.06 1.06l3-3a.75.75 0 0 0 0-1.06z"/>
                    </svg>
                </a>

                <div class="mt-12">
                    <h2 class="text-2xl font-bold text-black mb-6">Connect on Social Media</h2>
                    <p class="text-gray-600 mb-6">Click on any platform to view our QR code and connect with us</p>

                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
                        <SocialMediaSection config={SITE_CONFIG} client:load />
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-16">
            <p class="text-base text-gray-800">{SITE_CONFIG.contact.address.street}</p>
            <p class="text-base text-gray-800">{SITE_CONFIG.contact.address.city}, {SITE_CONFIG.contact.address.state} {SITE_CONFIG.contact.address.zip}</p>
            <p class="text-base text-gray-800">{SITE_CONFIG.contact.address.country}</p>
        </div>
    </div>
</PageLayout>